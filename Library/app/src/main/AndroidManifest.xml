<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.library">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="31">

        <!-- WelcomeActivity ilk açılış ekranı olacak -->
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Library"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LoginActivity -->
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.Library"
            android:exported="true">
        </activity>

        <!-- RegisterActivity -->
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/Theme.Library"
            android:exported="true">
        </activity>

        <!-- StudentHomeActivity -->
        <activity
            android:name=".UserHomeActivity"
            android:exported="true">
        </activity>

        <!-- AdminActivity -->
        <activity
            android:name=".AdminActivity"
            android:exported="true">
        </activity>

        <!-- RoomListActivity eklenmeli -->
        <activity
            android:name=".RoomListActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".ReservationsActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".ReservationTimeActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".AdminRoomManagementActivity"
            android:exported="true">
        </activity>

    </application>

</manifest>
